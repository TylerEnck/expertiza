<h3 class="center">Grade History of <%= @assignment %></h3>
<h5 class="center"><%= @receiver %></h5>

<table class="table table-striped" width="100%">
  <thead>
  <tr>
    <th width="15%">Instructor</th>
    <th width="10%">Grade</th>
    <th width="55%">Comment</th>
    <th width="20%">Graded At</th>
  </tr>
  </thead>
  <!--This is the main view of the table. -->
  <tbody>
  <% @grading_histories.each do |record| %>
      <tr>
        <td><%= User.where(id: record.instructor_id).pluck(:fullname).first %></td>
        <td><%= record.grade %></td>
        <td><%= record.comment %></td>
        <td><%= record.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>
